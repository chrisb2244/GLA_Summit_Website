{
  "env": {
    "browser": true,
    "es2021": true
  },
  "root": true,
  "plugins": [
    "react",
    "jest-react",
    "@typescript-eslint"
  ],
  "extends": [
    "plugin:react/recommended",
    "plugin:jest-react/recommended",
    "plugin:@typescript-eslint/recommended",
    "next/core-web-vitals",
    "prettier"
  ],
  "rules": {
    "jsx-quotes": [
      "error",
      "prefer-single"
    ]
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "overrides": [
      {
        "files": ["__tests__/**"],
        "rules": {
            "@typescript-eslint/no-empty-function": "off"
        }
      }
  ],
  "settings": {
    "next": {
      "dirs": [
        "src/Components",
        "src/pages",
        "__tests__"
      ]
    }
  },
  "ignorePatterns": ["reportWebVitals.ts", "react-app-env.d.ts"]
}